<div class="articles-show-comments">
  <% @comments.approved.each do |comment| %>
    <p><%= comment.body %></p>
    <p class="commentTime"><%= "#{time_ago_in_words(comment.created_at)} ago" %></p>
    <br><hr>
  <% end %>
  <% if signed_in? %>
    <%= form_for([@article, @article.comments.build]) do |f| %>
      <p><%= f.text_area :body, class: "form-control", placeholder: "Join the discussion"  %></p>
      <p class="text-center"><%= f.submit "Submit", class: "button2" %></p>
    <% end %>
  <% end %>
</div>
