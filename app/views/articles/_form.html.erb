<%= form_with model: @article, local: true do |form| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="row form-box">
    <div class="col-md-6">

  <div class="field">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, id: :article_title, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= form.label :img_url, class: "form-label" %>
    <%= form.text_field :img_url, id: :article_img_url , class: "form-control" %>
  </div>
  <br>
  <table class="table table-condensed">
    <td>
    <br>
    <div class="form-group">
     <%= form.label :category, class: "form-label" %>
     <%= form.select :category, options_for_select([
    ["Select product type", ""], 
    "Longform", 
    "Article", 
    "Interview", 
    "Map", 
    "Documentary"]), 
    {}, { class: "form form-group form-control" } %>
  </div>
    </td>
    <td>
    <br>
    <div class="form-group">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, id: :article_author , class: "form-control" %>    </div>
    </td>
  </table>

</div>

  <div class="col-md-6">
      <div class="field">
      <%= form.label :text, class: "form-label" %>
      <%= form.text_area :text, id: :article_text, rows: 10, class: "form-control" %>
      </div>
  </div>
</div>

<br>

<div class="actions">
  <p class="text-center">
    <%= form.submit "Post", class: "btn btn-default" %>
  </p>
 </div>
<% end %>