<% @articles.each do |article| %>
  <% if article.img_url.present? %>
  <%= link_to image_tag(article.img_url, class: "lastories-image"), article_path(article) %>
  <% end %>
  <div class="tag">
    <h3><%= link_to article.title, article_path(article) %></h3>
    <p><%= article.category %> &nbsp Â· &nbsp <%= article.author %></p>
  </div>
<% end %>

