<div class="row">
  <div class="col-md-12">
    <%= image_tag "settler-a.jpg", class: "img-responsive splash" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 newsletter-band text-center">
    <br><br>
    <p>Sign up to be updated with new weekly stories</p>
    <br>
    <%= form_with(url:"/static/thank_you", method: "post", local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "newsletter-label" %>
      <%= form.text_field :name, class: "form-control newsletter-form", placeholder: "Your name" %>
    </div>
    <div class="form-group">
      <%= form.label :email, class: "newsletter-label" %>
      <%= form.text_field :email, class: "form-control newsletter-form", placeholder: "Your email address" %>
    </div>
    <%= form.submit "Subscribe", class: "btn btn-default newsletter-button" %>
    <% end %>

</div>
</div>

  <!-- -->
   <div class="container-fluid article-container">
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-md-12">
        <!-- -->
        <div class="img-div">
          <p><% if article.img_url.present? %>
          <%= link_to image_tag(article.img_url, class: "img-responsive article-img-index"), article_path(article) %>
          <% end %></p>
        </div>
        <!-- -->
        <div class="article-image-index"></div>
        <p><span class="article-category-index"><%= article.category %></span> &nbsp Â· &nbsp <span class="article-author-index"><%= article.author %></span></p>
        <!-- -->
        <h3><%= link_to article.title, article_path(article), class: "article-title-index" %></h3>
        <!-- -->
        <% if signed_in? && current_user.author? %>
          <p class="text-center text-command"><%= link_to 'New article', new_article_path %></p>
        <% end %>
        <!-- -->
        <p class="article-brief-index"><%= link_to article.text.truncate_words(40), article_path(article) %></p>
      <br><hr><br><br>
      </div>
    <% end %>
  </div>
  </div>