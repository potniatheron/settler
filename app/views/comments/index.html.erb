<div class="row">
  <div class="large-8 large-centered columns">
    <h5><small>Comments for the post titled:</small> <%= @article.title %></h5>
    <hr>
    <h5>Moderation table</h5>
    <%= form_tag approve_article_comments_path, method: :put do %>
    <table>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Comment</th>
      <th>Status</th>

    </tr>

      <% @article.comments.draft.each do |comment| %>
      <tr>
        <td><%= check_box_tag "comment_ids[]", comment.id %></td>
        <td><%= comment.body %></td>
        <td><%= comment.status%></td>
      
      </tr>
      <% end %>
    </table>
      <%= submit_tag "Approve Comments"%> 
    <% end %>

<h5>All Approved Comments</h5>
<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Comment</th>
    <th>Status</th>

  </tr>
  <% @article.comments.approved.each do |comment| %>
  <tr>
    <td><%= comment.id %></td>
    <td><%= comment.body %></td>
    <td><%= comment.status%></td>
    
  </tr>
  <% end %>
</table>

<hr>

<p>Note: You could of-course add edit and delete links there.</p>
