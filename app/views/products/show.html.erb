<div class="show-container">
	<%= image_tag("logo2.png", class: "top-logo") %>
	<div class="row">
		<div class="col-md-6">
	    <% if @product.image_url.present? %><p><%= image_tag(@product.image_url, class: "img-responsive") %></p><% end %>
			<% if signed_in? && current_user.moderator? %><br>
			<p><%= link_to 'Edit', edit_product_path(@product), class: "command-button" %> &nbsp · &nbsp <%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "command-button" %></p><% end %>
		</div>
		<div class="col-md-6">
			<h1><%= @product.name %></h1>
			<p><%= @product.price %> €</p>
      <p><%= @product.description %></p>
    </div>
	</div><hr><br>
	<h5 class="text-center">DISCOVER MORE</h5><br>
	<div class="container-fluid">
	  <div class="row">
	   <% @products.each do |product| %>
	    <div class="col-md-3">
	    	<% if @product.image_url.present? %><p><%= link_to image_tag(product.image_url, class: "img-responsive"), product %></p><% end %>
	      <p class="text-center"><%= product.name %></p><br><br>
	    </div>
	   <% end %>
	  </div>
	</div>
	<p class="text-center"><%= link_to 'Back', products_path, class: "command-button" %>
</div>
